{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm install --production",
    "watchPatterns": [
      "/server/**/*"
    ]
  },
  "deploy": {
    "startCommand": "cd server && node app.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 